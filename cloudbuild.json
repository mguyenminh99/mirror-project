{
  "steps":[
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "asia-northeast1-docker.pkg.dev/cohesive-slate-409107/build-trigger/app:latest",
        "." 
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "asia-northeast1-docker.pkg.dev/cohesive-slate-409107/build-trigger/app:latest"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "run",
        "deploy",
        "deploy-by-cloud-build",
        "--image",
        "asia-northeast1-docker.pkg.dev/cloudtest-408512/build-trigger/app:latest",
        "--platform",
        "managed",
        "--region",
        "asia-northeast1",
        "--allow-unauthenticated",
        "--port",
        "80"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
