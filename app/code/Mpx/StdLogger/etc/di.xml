<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Psr\Log\LoggerInterface" type="Mpx\StdLogger\Logger\Monolog"/>
    <preference for="Monolog\Handler\StreamHandler" type="Mpx\StdLogger\Logger\StreamHandlerStd" />

    <type name="Mpx\StdLogger\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">main</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Mpx\StdLogger\Logger\Handler\System</item>
                <item name="debug" xsi:type="object">Mpx\StdLogger\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </type>
</config>
