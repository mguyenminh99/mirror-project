                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="XShoppingSt\MpTimeDelivery\Api\Data\TimeSlotOrderInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
