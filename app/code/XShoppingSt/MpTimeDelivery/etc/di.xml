    <type name="Magento\Checkout\Model\GuestPaymentInformationManagement">
		<plugin name="XShoppingSt_MpTimeDelivery::timeSlotGuestPaymentInformation" type="XShoppingSt\MpTimeDelivery\Plugin\Checkout\Model\GuestPaymentInformationManagement" sortOrder="1" />
