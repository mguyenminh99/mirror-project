            <argument name="collections" xsi:type="array">
                <item name="delivery_time_slot_listing_data_source" xsi:type="string">XShoppingSt\MpTimeDelivery\Model\ResourceModel\TimeSlotConfig\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="XShoppingSt\MpTimeDelivery\Model\ResourceModel\TimeSlotConfig\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">marketplace_timeslot_config</argument>
            <argument name="eventPrefix" xsi:type="string">marketplace_timeslot_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">config_grid_collection</argument>
