<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <update handle="marketplace_styles"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Marketplace Dashboard</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard" name="marketplace_account_dashboard" template="account/dashboard.phtml" cacheable="false"/>
        </referenceContainer>

        <referenceContainer name="marketplace_account_dashboard">
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard\Diagrams" name="diagrams" template="account/diagrams.phtml" cacheable="false"/>
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard\LocationChart" name="locationChart" template="account/locationChart.phtml" cacheable="false"/>
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard\CategoryChart" name="categoryChart" template="account/categoryChart.phtml" cacheable="false"/>
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard" name="dashboard_additional_chart_block" template="account/dashboard/additional_chart.phtml" cacheable="false"/>
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard" name="dashboard_additional_total_block" template="account/dashboard/additional_total.phtml" cacheable="false"/>
            <block class="XShoppingSt\Marketplace\Block\Account\Dashboard" name="dashboard_additional_content_block" template="account/dashboard/additional_content.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
