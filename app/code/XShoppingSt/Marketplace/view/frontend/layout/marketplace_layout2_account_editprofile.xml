<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="seller-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="marketplace_styles"/>
    <head>
        <css src="XShoppingSt_Marketplace::colorpicker/css/colorpicker.css"/>
    </head>
    <body>
        <referenceBlock name="seller.page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Marketplace Edit Seller Profile</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="seller.content">
            <block class="XShoppingSt\Marketplace\Block\Account\Editprofile" name="marketplace_account_editprofile" template="account/editprofile.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
