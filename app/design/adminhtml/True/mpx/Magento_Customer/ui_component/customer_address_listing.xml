<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentDisabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </bookmark>
        <columnsControls name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentDisabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </columnsControls>
    </listingToolbar>
    <columns name="customer_address_columns">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="firstname" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">First Name</label>
            </settings>
        </column>
        <column name="lastname" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Last Name</label>
            </settings>
        </column>
        <column name="street" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Street Address</label>
            </settings>
        </column>
        <column name="city" sortOrder="60">
            <settings>
                <filter>text</filter>
                <label translate="true">City</label>
            </settings>
        </column>
        <column name="region" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">State</label>
            </settings>
        </column>
        <column name="postcode" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Zip/Postal Code</label>
            </settings>
        </column>
        <column name="country_id" component="Magento_Ui/js/grid/columns/select" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentDisabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </column>
        <column name="telephone" sortOrder="80">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Phone</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Magento\Customer\Ui\Component\Listing\Address\Column\Actions" component="Magento_Customer/js/grid/columns/actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
